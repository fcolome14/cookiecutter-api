// This file tells VS Code to recommend certain extensions when someone opens the project
// To manually generate it: code --list-extensions | ForEach-Object { "    `"$($_)`"," } | Out-File -Encoding utf8 .vscode/extensions.json

{
    "recommendations": [
        "ms-python.python", //Python support: linting, IntelliSense, formatting
